<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="@dimen/time_item_height"
        android:layout_margin="@dimen/time_item_margin"
        android:id="@+id/id_front"
        android:orientation="horizontal">
        <TextView android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/time_item_fontsize"
            android:id="@+id/txtCaption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="@dimen/time_item_height"
        android:layout_margin="@dimen/time_item_margin"
        android:id="@+id/id_back"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_remove"
            android:text="@string/btn_remove_caption"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>